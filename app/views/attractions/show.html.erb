<h1>Show an Attraction</h1>

<h3>Name: <%= @attraction.name %></h3>
<h3>Min Height: <%= @attraction.min_height %></h3>
<h3>Tickets: <%= @attraction.tickets %></h3>
<h3>Nausea: <%= @attraction.nausea_rating %></h3>
<h3>Happiness: <%= @attraction.happiness_rating %></h3>
<br>
<% if current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction.id) %>
<% else %>  
    <%= form_tag("/rides", method: "post") do %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :attraction_id, @attraction.id %>
      <%= button_tag "Go on this ride" %>    
    <% end %>
<% end %>